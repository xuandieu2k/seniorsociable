<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_dialog"
            android:backgroundTint="@color/white_background"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_header_dialog"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_8"
                android:text="@string/enter_quantity"
                android:textAllCaps="true"
                android:textColor="@color/orange_900"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3.0">

                    <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
                        android:id="@+id/tvInput"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:background="@drawable/bg_form_input_blue_100"
                        android:gravity="center|right"
                        android:hint="0"
                        android:maxLength="14"
                        android:padding="@dimen/dp_4"
                        android:singleLine="true"
                        android:text="@string/zero"
                        android:textColor="@color/black"
                        android:textStyle="bold">
                    </vn.xdeuhug.seniorsociable.widget.AppTextViewBold>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="4.0">

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKeyReset"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="@string/clear" />

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKeyMinus"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="@string/decrease" />

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKeyPlus"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_marginRight="0.5dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="@string/increase" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0.0dp"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        app:cardCornerRadius="@dimen/dp_8">

                        <ImageButton
                            android:id="@+id/btnKeyBack"
                            style="@style/TextViewNumberDark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_dialog"
                            android:src="@drawable/ic_delete_red" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3.0">

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey7"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="7" />

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey8"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="8" />

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey9"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_marginRight="0.5dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3.0">

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey4"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="4" />

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey5"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="5" />

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey6"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_marginRight="0.5dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3.0">

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey1"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="1" />

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey2"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="2" />

                    <vn.xdeuhug.seniorsociable.widget.AppButton
                        android:id="@+id/btnKey3"
                        style="@style/TextViewNumberDark"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_marginRight="0.5dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_border_dialog"
                        android:gravity="center"
                        android:text="3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3.0">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0">

                        <vn.xdeuhug.seniorsociable.widget.AppButton
                            android:id="@+id/btnKey0"
                            style="@style/TextViewNumberDark"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dp_48"
                            android:layout_margin="@dimen/dp_8"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_dialog"
                            android:gravity="center"
                            android:text="0"
                            tools:ignore="NestedWeights" />

                        <vn.xdeuhug.seniorsociable.widget.AppButton
                            android:id="@+id/btnKey000"
                            style="@style/TextViewNumberDark"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dp_48"
                            android:layout_margin="@dimen/dp_8"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_dialog"
                            android:gravity="center"
                            android:text="000"
                            android:visibility="visible" />

                        <vn.xdeuhug.seniorsociable.widget.AppButton
                            android:id="@+id/btnKeyDot"
                            style="@style/TextViewNumberDark"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dp_48"
                            android:layout_margin="@dimen/dp_8"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_dialog"
                            android:gravity="center"
                            android:text="."
                            android:visibility="gone" />

                        <vn.xdeuhug.seniorsociable.widget.AppButton
                            android:id="@+id/btnAccept"
                            style="@style/TextViewNumberDark"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dp_48"
                            android:layout_margin="@dimen/dp_8"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_dialog"
                            android:backgroundTint="@color/orange_900"
                            android:gravity="center"
                            android:text="@string/done"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>