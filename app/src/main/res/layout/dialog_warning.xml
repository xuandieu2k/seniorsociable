<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_dialog"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_header_dialog"
                android:backgroundTint="@color/green_app_senior_sociable"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_16"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <vn.xdeuhug.seniorsociable.widget.AppTextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_32"
                    android:layout_marginVertical="@dimen/dp_16"
                    android:gravity="center"
                    android:textColor="@color/gray_600"
                    android:textSize="@dimen/sp_16"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llNote"
                android:layout_marginHorizontal="@dimen/dp_32"
                android:layout_marginVertical="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gray_100_stroke_gray_200_8px"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_8">

                <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
                    style="@style/text_title_information_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/note" />

                <vn.xdeuhug.seniorsociable.widget.AppEditText
                    android:id="@+id/edtNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/transparent"
                    android:gravity="start|top"
                    android:hint="@string/description"
                    android:lines="4"
                    android:maxLength="255"
                    android:maxLines="4"
                    android:scrollbars="none"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    tools:text="ThoạiPhạm ThoạiPhạm ThoạiPhạmThoạiPhạm ThoạiPhạm ThoạiPhạm ThoạiPhạm ThoạiPhạm ThoạiPhạm" />

                <vn.xdeuhug.seniorsociable.widget.AppTextView
                    android:id="@+id/tvCountChar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/max_character_note_255"
                    android:textColor="@color/orange_700" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llResetPassword"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_32"
                android:layout_marginVertical="@dimen/dp_16"
                android:orientation="vertical">
                <vn.xdeuhug.seniorsociable.widget.AppTextView
                    android:textColor="@color/gray_600"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/message_password_reset"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="vertical">
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:text="@string/account"
                            android:textAllCaps="true"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:textColor="@color/gray_600"
                            android:textSize="@dimen/sp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:text="@string/password"
                            android:textAllCaps="true"
                            android:textColor="@color/gray_600"
                            android:textSize="@dimen/sp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="vertical">
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:id="@+id/tvAccount"
                            android:hint="@string/account"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_900"
                            android:textSize="@dimen/sp_16"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:id="@+id/tvPassword"
                            android:hint="@string/password"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_900"
                            android:textSize="@dimen/sp_16"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInforEmployee"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_32"
                android:layout_marginVertical="@dimen/dp_16"
                android:orientation="vertical">
                <vn.xdeuhug.seniorsociable.widget.AppTextView
                    android:textColor="@color/gray_600"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center"
                    android:text="@string/information_employee"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:text="@string/supplier"
                            android:textAllCaps="true"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:textColor="@color/gray_600"
                            android:textSize="@dimen/sp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:text="@string/account"
                            android:textAllCaps="true"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:textColor="@color/gray_600"
                            android:textSize="@dimen/sp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:text="@string/password"
                            android:textAllCaps="true"
                            android:textColor="@color/gray_600"
                            android:textSize="@dimen/sp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:id="@+id/tvSupplierE"
                            android:hint="@string/account"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:textAllCaps="false"
                            android:layout_marginStart="@dimen/dp_8"
                            android:textColor="@color/gray_900"
                            android:textSize="@dimen/sp_16"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:id="@+id/tvAccountE"
                            android:hint="@string/account"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_900"
                            android:textSize="@dimen/sp_16"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <vn.xdeuhug.seniorsociable.widget.AppTextView
                            android:id="@+id/tvPasswordE"
                            android:hint="@string/password"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_900"
                            android:textSize="@dimen/sp_16"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:orientation="horizontal">

                <vn.xdeuhug.seniorsociable.widget.AppButtonBold
                    android:id="@+id/btnExit"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_200_no_stroke"
                    android:backgroundTint="@color/orange_000"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_4"
                    android:text="@string/exit"
                    android:textAllCaps="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:textColor="@color/red_500"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <vn.xdeuhug.seniorsociable.widget.AppButtonBold
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_border_left_button"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_4"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/red_500"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <vn.xdeuhug.seniorsociable.widget.AppButtonBold
                    android:id="@+id/btnConfirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_border_right_button_green"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_4"
                    android:text="@string/confirm"
                    android:textAllCaps="true"
                    android:backgroundTint="@color/green_100"
                    android:textColor="@color/green_app_senior_sociable"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>