<?xml version="1.0" encoding="utf-8"?>
<!-- Kiểu nút mặc định -->
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="StateListReachable">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_8" />
            <solid android:color="@color/green_100" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_8" />
            <solid android:color="@color/green700" />
        </shape>

    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_8" />
            <solid android:color="@color/green_100" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_8" />
            <solid android:color="@color/green_100" />
        </shape>
    </item>

    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_8" />
            <solid android:color="@color/green700" />
        </shape>
    </item>

</selector>