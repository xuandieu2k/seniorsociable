<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_104"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_8">
    <include
        android:id="@+id/llFirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_first_story"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/rlStory"
        android:layout_width="@dimen/dp_104"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imvBackground"
            android:layout_width="@dimen/dp_104"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:contentDescription="@string/default_image"/>
        <ImageView
            android:id="@+id/imvAvatar"
            android:background="@drawable/ic_user"
            android:foreground="@drawable/bg_avatar_online"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:contentDescription="@string/default_image"/>
        <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:text="@string/account"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>