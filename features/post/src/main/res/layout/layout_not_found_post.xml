<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlNotPost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imvNotData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/default_image"
        android:src="@drawable/ic_no_post_circle" />

    <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvNotData"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/post_not_exist"
        android:textAllCaps="true"
        android:textColor="@color/gray_600" />
</RelativeLayout>