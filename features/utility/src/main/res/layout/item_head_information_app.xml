<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gray_200_no_stroke"
    android:backgroundTint="@color/white"
    android:padding="@dimen/dp_16"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imvLogo"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/ic_logo_senior_sociable_vn"
        android:contentDescription="@string/default_image" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
            android:id="@+id/tvHeadVersion"
            android:textSize="@dimen/sp_16"
            tools:text="Phiên bản 1.3.65 build 125"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <vn.xdeuhug.seniorsociable.widget.AppTextView
            android:id="@+id/tvWebsite"
            android:layout_marginVertical="@dimen/dp_12"
            android:textSize="@dimen/sp_16"
            tools:text="Website supplierPro.com"
            android:layout_width="wrap_content"
            android:textColorLink="@color/blue_700"
            android:layout_height="wrap_content"/>

        <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/develop_by"
            android:layout_marginBottom="@dimen/dp_4"
            android:textSize="@dimen/sp_12" />
        <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
            android:id="@+id/tvNameCompany"
            android:text="@string/full_name_company"
            android:textColor="@color/blue_700"
            android:textSize="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <vn.xdeuhug.seniorsociable.widget.AppTextView
            android:id="@+id/tvAddress"
            android:text="@string/full_address_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>