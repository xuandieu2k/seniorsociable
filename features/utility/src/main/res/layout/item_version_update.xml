<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_below="@id/imvTop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"
            android:background="@color/gray_200" />

        <ImageView
            android:id="@+id/imvTop"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_circle_gray"
            android:contentDescription="@string/default_image"
            app:tint="@color/gray_200" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_weight="1"
        android:orientation="vertical">

        <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
            android:id="@+id/tvHeadVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_700"
            android:textSize="@dimen/sp_16"
            tools:text="Phiên bản 1.3.65 build 125" />

        <vn.xdeuhug.seniorsociable.widget.AppTextView
            android:id="@+id/tvTimeCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/sp_12"
            tools:text="02:06 AM 03/01/2023" />

        <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
            android:id="@+id/tvDescriptionVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@string/description_version"/>

        <vn.xdeuhug.seniorsociable.widget.AppTextView
            android:layout_marginBottom="@dimen/dp_16"
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mô tả nè thích gì mô tả đó" />
    </LinearLayout>
</LinearLayout>