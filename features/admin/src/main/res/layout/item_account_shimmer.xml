<LinearLayout android:id="@+id/llLeft"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginVertical="@dimen/dp_8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_8"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_12"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imvAvatar"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            android:contentDescription="@string/default_image"
            android:scaleType="fitXY"
            android:src="@drawable/bg_circle_gray"
            app:tint="@color/gray_200"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
                android:id="@+id/tvNameUser"
                android:layout_width="@dimen/dp_56"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_gray_200_no_stroke" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/bg_gray_200_no_stroke"
                android:orientation="horizontal"/>
            <vn.xdeuhug.seniorsociable.widget.AppTextView
                android:id="@+id/tvJoinIn"
                android:layout_marginVertical="@dimen/dp_8"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/bg_gray_200_no_stroke"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/bg_gray_200_no_stroke"
                android:orientation="horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vLineEnd"
        android:layout_width="@dimen/dp_4"
        android:layout_height="match_parent"
        android:background="@color/green_007"
        android:visibility="gone" />
</LinearLayout>