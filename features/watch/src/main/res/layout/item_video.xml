<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMedia"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.jzvd.JzvdStdTikTok
        android:id="@+id/plvVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/plvVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical"
        tools:ignore="RelativeOverlap">
        <vn.xdeuhug.seniorsociable.widget.reactbutton.ReactButton
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_like"
            android:drawablePadding="@dimen/dp_8"
            android:text="@string/like"
            android:minHeight="0dp"
            android:layout_marginVertical="@dimen/dp_32"
            android:textColor="@color/white"
            android:padding="@dimen/dp_8"
            android:background="@null" />
        <vn.xdeuhug.seniorsociable.widget.AppButton
            android:id="@+id/btnComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:background="@null"
            android:drawableTop="@drawable/ic_comment"
            android:drawablePadding="@dimen/dp_8"
            android:layout_marginVertical="@dimen/dp_8"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:padding="@dimen/dp_8"
            android:text="@string/comment"/>
        <vn.xdeuhug.seniorsociable.widget.AppButton
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:background="@null"
            android:drawableTop="@drawable/ic_share"
            android:drawablePadding="@dimen/dp_8"
            android:layout_marginVertical="@dimen/dp_32"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:padding="@dimen/dp_8"
            android:text="@string/share"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llUserPost"
        android:layout_marginBottom="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imvAvatar"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            tools:src="@drawable/ic_user_default"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_16"
            android:contentDescription="@string/default_image" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <vn.xdeuhug.seniorsociable.widget.AppTextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                tools:text="Xuân Diệu"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:background="@drawable/bg_radius_30px_solid_white">
                <ImageView
                    android:src="@drawable/ic_plus"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:contentDescription="@string/default_image" />
                <vn.xdeuhug.seniorsociable.widget.AppTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/follow"
                    android:textSize="@dimen/sp_10"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/dp_4"
                    android:paddingVertical="@dimen/dp_4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>