<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/dp_320"
    android:layout_marginHorizontal="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_8"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/dp_16">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imvBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:src="@drawable/bg_events"
            android:scaleType="centerCrop"
            android:contentDescription="@string/default_image" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_4"
            android:orientation="vertical">
            <vn.xdeuhug.seniorsociable.widget.AppTextViewBold
                android:id="@+id/tvContent"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lines="2"
                android:ellipsize="end"
                android:textSize="@dimen/sp_16"
                tools:text="Giao lưu bóng đá"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_200"/>
            <vn.xdeuhug.seniorsociable.widget.AppTextView
                android:id="@+id/tvTimeStart"
                android:layout_marginVertical="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_8"
                android:paddingStart="@dimen/dp_32"
                android:gravity="center_vertical"
                tools:text="Hôm nay"/>
            <vn.xdeuhug.seniorsociable.widget.AppTextView
                android:id="@+id/tvStatus"
                android:layout_marginVertical="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_event_timer"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                tools:text="Đang diễn ra"/>
            <vn.xdeuhug.seniorsociable.widget.AppTextView
                android:id="@+id/tvMember"
                android:layout_marginVertical="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_event_member"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                tools:text="Số lượng: 120"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>